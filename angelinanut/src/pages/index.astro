---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Product from "../components/Product.astro";
import CartSummary from "../components/CartSummary.astro";
import products from '../../public/products.json';

// const products = await fetch('/path/to/products.json')
//   .then(response => response.json());
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<title>AngelinaNUT - Licenciada en Nutrición</title>
		<meta name="author" content="Facundo Wegher Osci" />
		<meta
			name="description"
			content="Licenciada en Nutrición María Angelina Pérez"
		/>
		<link rel="canonical" href="https://angelinanut.github.io/nutricion" />
		<meta name="robots" content="index" />
		<meta
			name="keywords"
			content="nutrición, nutricionista, salud, bienestar, alimentación, dietas, María Angelina Pérez, María Pérez, Paraná, consultas, asesoramiento"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
			rel="stylesheet"
		/>

		<link rel="stylesheet" href="styles.css" />
		<link rel="stylesheet" href="ribbon.css" />

		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
			integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
			crossorigin="anonymous"
		/>
		<script
			src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
			integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
			crossorigin="anonymous"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
			integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
			crossorigin="anonymous"></script>

		<link rel="icon" type="image/png" href="/iconAngelinaNUT.png" />

		<link rel="stylesheet" href="tienda.css" />
		<link rel="stylesheet" href="newstyles.css" />
	</head>
	<body>
		<Header />
		<main class="container my-5">
			<h2 class="text-center">Tienda Virtual</h2>
			<div class="search-bar mb-4">
				<label for="search">Buscar:</label>
				<input
					type="text"
					id="search"
					placeholder="Buscar productos..."
				/>
			</div>
			<form
				action="https://formspree.io/f/mrgjkldq"
				method="POST"
				id="shop-form"
			>
				<div class="row" id="product-list">
					{products.map((product) => <Product {...product} />)}
				</div>
				<CartSummary />
				<div class="my-4">
					<h4>Datos de Envío</h4>
					<input
						class="form-control"
						type="text"
						name="Nombre"
						placeholder="Nombre completo"
						required
					/>
					<input
						class="form-control my-2"
						type="email"
						name="Email"
						placeholder="Correo electrónico"
						required
					/>
					<input
						class="form-control my-2"
						type="text"
						name="Dirección"
						placeholder="Dirección de envío"
						required
					/>
					<input
						class="form-control my-2"
						type="text"
						name="Teléfono"
						placeholder="Número de teléfono"
						required
					/>
					<input
						type="hidden"
						name="_next"
						value="//site.io/thanks.html"
					/>
				</div>
				<div class="text-center">
					<button class="btn btn-primary" type="submit"
						>Enviar Pedido</button
					>
				</div>
			</form>
		</main>
		<Footer />
		<script src="/script_tienda.js" is:inline></script>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
			crossorigin="anonymous"></script>
	</body>
</html>
